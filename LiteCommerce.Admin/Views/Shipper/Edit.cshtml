
@model LiteCommerce.DomainModels.Shipper

<form method="post" action="~/Shipper/Save">

    @Html.HiddenFor(m => m.ShipperID)

    <div class="form-group">
        <label>Tên nhà vận chuyển:</label>
        <input type="text" class="form-control" name="ShipperName" id="ShipperName" autofocus value="@Model.ShipperName">
        @Html.ValidationMessage("a", new { @class = "text-red" })
    </div>
    <div class="form-group">
        <label>Số điện thoại:</label>
        @*<input type="text" class="form-control" name="Phone" id="Phone" value="@Model.Phone">*@
        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control"})
        @Html.ValidationMessage("b", new { @class = "text-red" })
    </div>

    <div class="row">
        <div class="col-md-6">
            
        </div>
        <div class="col-md-6 text-right">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save"></i> Lưu dữ liệu
            </button>

            <a href="~/Shipper/Index" class="btn btn-warning">
                <i class="fa fa-window-close"></i> Bỏ qua
            </a>
        </div>

    </div>
</form>
