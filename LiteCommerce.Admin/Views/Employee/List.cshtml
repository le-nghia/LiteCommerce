
@model LiteCommerce.Admin.Models.EmpolyeePaginationQueryResult
@{
    Layout = null;
}

<div class="text-left">
    <p>Có tất cả <strong>@Model.RowCount</strong> Nhân viên. Bạn đang ở trang <strong>@Model.Page</strong> trên tổng số <strong>@Model.PageCount</strong> trang.</p>

</div>

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr align="center">
            <th>Họ Tên</th>
            
            <th>Ngày Sinh</th>
            <th>Ảnh</th>
            <th>Ghi chú</th>
            <th>Email</th>
            <th>Mật khẩu</th>
            <th class="text-right">
                <a href="~/Employee/Add" class="btn btn-xs btn-primary">
                    <i class="fa fa-plus"></i>
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>
                    <a href="~/Employee/Index"> @item.LastName  @item.FirstName </a> 
                </td>
                
                <td>
                    @item.BirthDate
                </td>
                <td>
                    <img src="@item.Photo" />
                </td>
                <td>
                    @(item.Notes.Substring(0,10)+"...")
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    @(item.Password.Substring(0, 3) +"******")
                </td>
                <td class="text-right">
                    <a href="~/Employee/Edit/@item.EmployeeID" class="btn btn-xs btn-info">
                        <i class="fa fa-edit"></i>
                    </a>
                    <a href="~/Employee/Delete/@item.EmployeeID" class="btn btn-xs btn-danger">
                        <i class="fa fa-remove"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <ul class="pagination">
        @for (int page = 1; page <= Model.PageCount; page++)
        {
            if (page == Model.Page)
            {
                <li class="active"><a href="javascript:;">@page</a></li>
            }
            else
            {
                <li><a href="javascript:;" onclick="getEmployees(@page)">@page</a></li>
            }
        }

    </ul>
</div>
