
@model LiteCommerce.DomainModels.Employee

<form method="post" action="~/Employee/Save">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group avatar">
                <label>Ảnh</label>
                @*<input type="text" class="form-control" name="Photo" id="Photo" value="@Model.Photo">*@
                <img src="@Model.Photo" class="img-circle profile-avatar" style="width: 180px" alt="User avatar">
                <input type="file" class="file-uploader" name="Photo" id="Photo">

            </div>
        </div>

        <div class="col-md-6">
            <label>Họ:</label>
            <input type="text" class="form-control" name="LastName" id="LastName" value="@Model.LastName" autofocus>
            @Html.ValidationMessage("a", new { @class = "text-red" })
        </div>
        <div class="col-md-6">
            <label>Tên:</label>
            <input type="text" class="form-control" name="FirstName" id="FirstName" value="@Model.FirstName">
            @Html.ValidationMessage("b", new { @class = "text-red" })
        </div>

    </div>
    <div class="form-group ">
        <label>Ngày sinh:</label>        
        @Html.TextBoxFor(m => m.BirthDate, new {@type= "datetime-local", @class = "form-control" })
           
    </div>

    <div class="row">
        
        <div class="col-md-4">
            <div class="form-group">
                <label>Email:</label>
                <input type="text" class="form-control" name="Email" id="Email" value="@Model.Email">
                @Html.ValidationMessage("c", new { @class = "text-red" })
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label>Mật khẩu:</label>
                <input type="text" class="form-control" name="Password" id="Password" value="@Model.Password">
                @Html.ValidationMessage("d", new { @class = "text-red" })
            </div>
        </div>
    </div>

    
    <div class="form-group">
        <label>Ghi Chú:</label>
       
        @Html.TextAreaFor( m=> m.Notes , new { @class= "form-control "})
    </div>
    

    <div class="row">
        <div class="col-md-6">
            
        </div>
        <div class="col-md-6 text-right">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save"></i> Lưu dữ liệu
            </button>

            <a href="~/Employee/Index" class="btn btn-warning">
                <i class="fa fa-window-close"></i> Bỏ qua
            </a>
        </div>
    </div>
</form>