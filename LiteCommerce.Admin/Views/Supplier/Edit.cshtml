@model LiteCommerce.DomainModels.Supplier
@{ 

}

<form method="post" action="~/Supplier/Save">

    @*<div class="form-group">
        @Html.ValidationSummary()
    </div>*@

    @Html.HiddenFor(m => m.SupplierID)
    
    <div class="form-group">
        <label>Tên nhà cung cấp:</label>
        @Html.TextBoxFor(m => m.SupplierName, new { @class = "form-control", @autofocus = "autofocus" })
        @Html.ValidationMessage("a", new { @class = "text-red"})

        @*<input type="text" class="form-control" name="SupplierName" id="SupplierName" value="@Model.SupplierName" autofocus>*@
    </div>
    <div class="form-group">
        <label>Tên giao dịch:</label>
        @Html.TextBoxFor(m => m.ContactName, new { @class = "form-control" })
        @Html.ValidationMessage("b", new { @class = "text-red" })

    </div>
    <div class="form-group">
        <label>Địa chỉ liên hệ:</label>
        @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Quốc gia:</label>

                @*@Html.DropDownListFor(m => m.Country, SelectListHelpers.Countries(), new { @class = "form-control" })*@

                <select class="form-control" name="Country" id="Country">                  

                     @foreach (var item in SelectListHelpers.Countries())
                    {
                       if (Model.Country == item.Value)
                       {
                           <option value="@item.Value" selected>@item.Text</option>
                       }
                       else
                       {
                           <option value="@item.Value">@item.Text</option>
                       }
                    }

                </select>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Thành phố:</label>
                @*@Html.DropDownListFor(m => m.City, SelectListHelpers.Cities(), new { @class = "form-control" })*@
                <select class="form-control" name="City" id="City">

                    @foreach (var item in SelectListHelpers.Cities())
                    {
                        if (Model.City == item.Value)
                        {
                            <option value="@item.Value" selected>@item.Text</option>
                        }
                        else
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    }

                </select>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Mã bưu chính:</label>
                @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control"})
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Điện thoại:</label>
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control"})
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            
        </div>
        <div class="col-md-6 text-right">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save"></i> Lưu dữ liệu
            </button>

            <a href="~/Supplier/Index" class="btn btn-warning">
                <i class="fa fa-window-close"></i> Bỏ qua
            </a>
        </div>
    </div>
</form>