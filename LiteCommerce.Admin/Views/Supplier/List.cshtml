
@model LiteCommerce.Admin.Models.SupplierPaginationQueryResult
@{
    Layout = null;
}

<div class="text-left">
    <p>Có tất cả <strong>@Model.RowCount</strong> nhà cung cấp. Bạn đang ở trang <strong>@Model.Page</strong> trên tổng số <strong>@Model.PageCount</strong> trang.</p>
</div>
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Tên nhà cung cấp</th>
            <th>Tên giao dịch</th>
            <th>Địa chỉ</th>
            <th>Quốc gia</th>
            <th>Thành phố</th>
            <th>Mã vùng</th>
            <th>Điện thoại</th>
            <th class="text-right">
                <a href="~/Supplier/Add" class="btn btn-xs btn-primary" title="Thêm mới">
                    <i class="fa fa-plus"></i>
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>
                    @item.SupplierName
                </td>
                <td>
                    @item.ContactName
                </td>
                <td>
                    @(item.Address.Substring(0,10) + "...")
                </td>
                <td>
                    @item.Country
                </td>
                <td>
                    @item.City
                </td>
                <td>
                    @item.PostalCode
                </td>
                <td>
                    @item.Phone
                </td>
                <td class="text-right">
                    <a href="~/Supplier/Edit/@item.SupplierID" name="supplierId" class="btn btn-xs btn-info" title="Chỉnh sữa">
                        <i class="fa fa-edit"></i>
                    </a>
                    <a href="~/Supplier/Delete/@item.SupplierID" class="btn btn-xs btn-danger" title="Xóa">
                        <i class="fa fa-remove"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <ul class="pagination">
        @for (int page = 1; page <= Model.PageCount; page++)
        {
            if (page == Model.Page)
            {
                <li class="active"><a href="javascript:;">@page</a></li>
            }
            else
            {
                <li><a href="javascript:;" onclick="getSuppliers(@page)">@page</a></li>
            }
        }

    </ul>
</div>
