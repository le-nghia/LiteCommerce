
@model LiteCommerce.DomainModels.ProductGallery


<form method="post" action="~/Product/SaveGaller">

    @Html.HiddenFor(m => m.GalleryID)

    <div class="form-group">
        <label>Ảnh: </label>
        <img src="@Model.Photo" style="width: 20%; height: auto;" />

        @Html.TextBoxFor(m => m.Photo, new { @class = "form-control" })
        @Html.ValidationMessage("a", new { @class = "text-red" })
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <label>Miêu tả:</label>
            @*<input type="text" class="form-control" name="Phone" id="Phone" value="@Model.Phone">*@
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control " })
            @Html.ValidationMessage("b", new { @class = "text-red" })
        </div>
        <div class="form-group col-md-6">
            <label>Hiển thị:</label>
            @*<input type="text" class="form-control" name="Phone" id="Phone" value="@Model.Phone">*@
            @Html.TextBoxFor(m => m.DisplayOrder, new { @class = "form-control" })
            
        </div>
        <div class="form-group col-md-6">
            <label>Giá trị:</label>
            @*<input type="text" class="form-control" name="Phone" id="Phone" value="@Model.Phone">*@
            @Html.TextBoxFor(m => m.IsHidden, new { @class = "form-control" })
            
        </div>
        <div class="form-group col-md-6">
            <label>Mã hàng:</label>
            @*<input type="text" class="form-control" name="Phone" id="Phone" value="@Model.Phone">*@
            @Html.TextBoxFor(m => m.ProductID, new { @class = "form-control" })
            
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save"></i> Lưu dữ liệu
            </button>
        </div>
        <div class="col-md-6 text-right">
            <a href="~/Product/Edit/@Model.ProductID" class="btn btn-warning">
                <i class="fa fa-window-close"></i> Bỏ qua
            </a>
        </div>

    </div>
</form>
