@model LiteCommerce.Admin.Models.CategoriPaginationQueryResult
@{
    Layout = null;
}

<div class="text-left">
    <p>Có tất cả <strong>@Model.RowCount</strong> Loại hàng. Bạn đang ở trang <strong>@Model.Page</strong> trên tổng số <strong>@Model.PageCount</strong> trang.</p>
</div>

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr align="center">
            <th>Tên loại hàng</th>
            <th>Mô tả</th>
            <th>Mã loại hàng cha</th>
            <th class="text-right">
                <a href="~/Categori/Add" class="btn btn-xs btn-primary">
                    <i class="fa fa-plus"></i>
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>
                    @item.CategoryName
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.ParentCategoryId
                </td>
                <td class="text-right">
                    <a href="~/Categori/Edit/@item.CategoryID" class="btn btn-xs btn-info">
                        <i class="fa fa-edit"></i>
                    </a>
                    <a href="~/Categori/Delete/@item.CategoryID" class="btn btn-xs btn-danger">
                        <i class="fa fa-remove"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <ul class="pagination">
        @for (int page = 1; page <= Model.PageCount; page++)
        {
            if (page == Model.Page)
            {
                <li class="active"><a href="javascript:;">@page</a></li>
            }
            else
            {
                <li><a href="javascript:;" onclick="getCategorys(@page)">@page</a></li>
            }
        }

    </ul>
</div>