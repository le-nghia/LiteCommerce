
@model LiteCommerce.DomainModels.Order
@{
    ViewBag.Title = "Xóa một đơn hàng";
}

<form class="form-horizontal" method="post" action="~/Order/Delete/@Model.EmployeeID">
    <div class="form-group">
        <label class="control-label col-sm-2">Mã KH: </label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.CustomerID</p>
        </div>

        <label class="control-label col-sm-2">Thời gian đặt hàng:</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.OrderTime</p>
        </div>

        <label class="control-label col-sm-2">Mã Nhân Viên:</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.EmployeeID</p>
        </div>

        <label class="control-label col-sm-2">Thời gian nhận đơn hàng:</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.AcceptTime</p>
        </div>
        <label class="control-label col-sm-2">Mã vận chuyển:</label>
        <div class="col-sm-4">
            <p class="form-control-static">@Model.ShipperID</p>
        </div>

        <label class="control-label col-sm-2">Thời gian vận chuyển:</label>
        <div class="col-sm-4">
            <p class="form-control-static">@Model.ShippedTime</p>
        </div>
        <label class="control-label col-sm-2">Thời gian kết thúc:</label>
        <div class="col-sm-4">
            <p class="form-control-static">@Model.FinishedTime</p>
        </div>
        <label class="control-label col-sm-2">Trang thái::</label>
        <div class="col-sm-4">
            <p class="form-control-static">@Model.Status</p>
        </div>

    </div>

    <div class="row">
        <div class="col-lg-offset-2 col-sm-10">
            <p class="text-danger" style="font-size:18px">
                Bạn có chắc chắn muốn xóa nhà cung cấp này khỏi hệ thống hay không?
            </p>
        </div>
        <div class="col-lg-offset-2 col-sm-10">
            <button class="btn btn-danger">Đồng ý xóa</button>
            <a href="~/Order/Index" class="btn btn-warning">Bỏ qua</a>
        </div>
    </div>
</form>


