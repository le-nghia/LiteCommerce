
@model LiteCommerce.Admin.Models.OrderPaginationQueryResult
@{
    Layout = null;
}

<div class="text-left">
    <p>Có tất cả <strong>@Model.RowCount</strong> đơn hàng. Bạn đang ở trang <strong>@Model.Page</strong> trên tổng số <strong>@Model.PageCount</strong> trang.</p>
</div>

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Mã KH</th>
            <th>Thời gian đặt hàng</th>
            <th>Mã Nhân Viên</th>
            <th>Thời gian nhận đơn hàng</th>
            <th>Mã vận chuyển</th>
            <th>Bắt đầu</th>
            <th>Kết thúc</th>
            <th>Trạng thái</th>
            <th class="text-right">
                <a href="~/Order/AddOrder" class="btn btn-xs btn-primary" title="Thêm mới">
                    <i class="fa fa-plus"></i>
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
        <tr>
            <td>
                @item.CustomerID
            </td>
            <td>
                @item.OrderTime
            </td>
            <td>
                @item.EmployeeID
            </td>
            <td>
                @item.AcceptTime
            </td>
            <td>
                @item.ShipperID
            </td>
            <td>
                @item.ShippedTime
            </td>
            <td>
                @item.FinishedTime
            </td>
            <td>
                @item.Status
            </td>
            <td class="text-right">
                <a href="~/Order/EditOrder/@item.OrderID" name="orderID" class="btn btn-xs btn-info" title="Chỉnh sữa">
                    <i class="fa fa-edit"></i>
                </a>
                <a href="~/Order/Delete/@item.OrderID" class="btn btn-xs btn-danger" title="Xóa">
                    <i class="fa fa-remove"></i>
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <ul class="pagination">
        @for (int page = 1; page <= Model.PageCount; page++)
        {
            if (page == Model.Page)
            {
                <li class="active"><a href="javascript:;">@page</a></li>
            }
            else
            {
                <li><a href="javascript:;" onclick="getOrder(@page)">@page</a></li>
            }
        }

    </ul>
</div>